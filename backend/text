# You also need a public folder where the frontend files (index.html, styles.css, script.js) will be located. Create the products table in your MySQL database:

CREATE TABLE products (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255),
    description TEXT,
    price DECIMAL(10, 2)
);

INSERT INTO products (name, description, price)
VALUES ('Product 1', 'Description of Product 1', 19.99),
       ('Product 2', 'Description of Product 2', 29.99),
       ('Product 3', 'Description of Product 3', 39.99);

